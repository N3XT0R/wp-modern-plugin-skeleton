<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         colors="true"
         stopOnFailure="false">
    <coverage
            includeUncoveredFiles="true"
            pathCoverage="true"
    >
        <report>
            <clover outputFile="coverage/clover.xml"/>
        </report>
    </coverage>
    <testsuites>
        <testsuite name="Plugin Test Suite">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
</phpunit>
